<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject_CThru" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <!-- Ensure windowTranslucentStatus is false -->
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Optionally, set the status bar color to a default value -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>


    <!-- Screen Background Color -->
    <style name="Screen">
        <item name="android:background">#202020</item>
    </style>

    <style name="Icons">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <!-- Text Background Color   -->
    <style name="Text">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>